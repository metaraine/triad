	script(src='/scripts/services/pixi.js')
	script(src='/scripts/services/TrianglePerson.js')
	script(src='/scripts/controllers/TriadAppCtrl.js')
	script(src='/scripts/directives/pixi.js')
	script(src='/scripts/directives/resize.js')
